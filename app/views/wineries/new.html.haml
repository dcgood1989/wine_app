.container
  .page-header
    %h2 #{current_user.full_name}, Add a New Winery to Your Inventory
  = form_for @winery do |f|

    .form-group

      = f.label :winery_name, class: "control-label"
      = f.text_field :winery_name, class: "form-control"

    .form-group

      = f.label :rating, class: "control-label"
      = f.text_field :rating, class: "form-control"
    %br

    .form-group

      = f.submit
